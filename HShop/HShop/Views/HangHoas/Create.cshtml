@model HShop.Models.HangHoa

@{
    ViewData["Title"] = "Thêm hàng hóa mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-box me-2"></i>Thêm hàng hóa mới
            </h4>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <!-- Cột trái -->
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="TenHh" class="form-control" placeholder=" " required />
                                    <label asp-for="TenHh" class="form-label"></label>
                                    <span asp-validation-for="TenHh" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="TenAlias" class="form-control" placeholder=" " />
                                    <label asp-for="TenAlias" class="form-label"></label>
                                    <span asp-validation-for="TenAlias" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="MaLoai" class="form-select" asp-items="ViewBag.MaLoai" required>
                                        <option value="">-- Chọn loại hàng --</option>
                                    </select>
                                    <label asp-for="MaLoai" class="form-label"></label>
                                    <span asp-validation-for="MaLoai" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="MoTaDonVi" class="form-control" placeholder=" " />
                                    <label asp-for="MoTaDonVi" class="form-label"></label>
                                    <span asp-validation-for="MoTaDonVi" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Cột phải -->
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="file" name="fHinh" class="form-control" accept="image/*" />
                                    <label class="form-label">Ảnh minh họa</label>
                                    <span asp-validation-for="Hinh" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="GiamGia" class="form-control" placeholder=" " type="number" step="0.01" min="0" max="1" />
                                    <label asp-for="GiamGia" class="form-label"></label>
                                    <span asp-validation-for="GiamGia" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="SoLanXem" class="form-control" placeholder=" " type="number" min="0" />
                                    <label asp-for="SoLanXem" class="form-label"></label>
                                    <span asp-validation-for="SoLanXem" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <select asp-for="MaNcc" class="form-select" asp-items="ViewBag.MaNcc" required>
                                        <option value="">-- Chọn nhà cung cấp --</option>
                                    </select>
                                    <label asp-for="MaNcc" class="form-label"></label>
                                    <span asp-validation-for="MaNcc" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="MoTa" class="form-control" placeholder=" " style="height: 100px"></textarea>
                            <label asp-for="MoTa" class="form-label"></label>
                            <span asp-validation-for="MoTa" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Thêm mới
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
