@model HShop.ViewModels.CategoryVM
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	ViewBag.Title = "Cập nhật thông tin loại";
}

<div class="container-fluid">
	<div class="card shadow mb-4">
		<div class="card-header py-3 pb-4">
			<h2 class="m-0 font-weight-bold text-center">Thông tin loại hàng hóa</h2>
		</div>
		<div class="card-body mt-4">
			<form asp-action="Update" class="form-horizontal" enctype="multipart/form-data">
				<input type="hidden" name="id" value="@ViewContext.RouteData.Values["id"]" />
				<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
				<input type="hidden" asp-for="MaLoai" />
				<!-- Cột thông tin chính -->
				<div class="d-flex">
					<div class="col-md-5">
						<div class="form-group">
							<label class="col-sm-4 col-form-label">Tên loại: </label>
							<div class="col-sm-8">
								<input asp-for="TenLoai" class="form-control" />
								<span asp-validation-for="TenLoai" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Tên alias: </label>
							<div class="col-sm-8">
								<input asp-for="TenLoaiAlias" class="form-control" />
								<span asp-validation-for="TenLoaiAlias" class="text-danger small"></span>
							</div>
						</div>
					</div>

					<!-- Cột thông tin phụ -->
					<div class="col-md-5">

						<div class="form-group">

							@if (!string.IsNullOrEmpty(Model.Hinh))
							{
								<label class="col-sm-4 col-form-label">Ảnh minh họa</label>
								<div class="col-sm-8">
									<div class="custom-file d-flex">
										<span class="mr-2">@Model.Hinh</span>
										<input asp-for="Hinh" class="custom-file-input" id="customFile" type="file">
									</div>
									<span asp-validation-for="Hinh" class="text-danger small"></span>
									<div class="mt-2">
										<img src="~/Hinh/Loai/@Model.Hinh" alt="Ảnh hiện tại" class="img-thumbnail" style="max-height: 150px;">
									</div>
								</div>
							}
							else
							{
								<label class="col-sm-4 col-form-label">Ảnh minh họa</label>
								<div class="col-sm-8">
									<div class="custom-file">
										<input asp-for="Hinh" class="custom-file-input" id="customFile" type="file">
									</div>
									<span asp-validation-for="Hinh" class="text-danger small"></span>
									<div class="mt-2">
										<div style="width: 150px; height: 150px; border: 1px solid #ddd; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa;" class="img-thumbnail">
											<span style="color: #666; font-size: 14px;">150px x 150px</span>
										</div>
									</div>
								</div>
							}
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="control-label">Mô tả</label>
					<textarea asp-for="MoTa" class="form-control" rows="5"></textarea>
					<span asp-validation-for="MoTa" class="text-danger small"></span>
				</div>
				<!-- Nút hành động -->
				<div class="form-group text-center mt-4">
					<button type="submit" class="btn btn-primary px-4">
						Lưu thay đổi
					</button>
					<a asp-action="Categories" asp-controller="Admin" class="btn btn-secondary ml-2">
						Quay lại danh sách
					</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}