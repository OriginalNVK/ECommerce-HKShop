<!DOCTYPE html>
<html>
<head>
    <!-- Các thẻ meta và link CSS giữ nguyên -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/img/logoweb.png">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <title>HK Shop - Admin</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/css/slick-theme.css" />
    <link type="text/css" rel="stylesheet" href="~/css/nouislider.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/css/style.css" />
    <link type="text/css" rel="stylesheet" href="~/css/admin_style.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=check_circle" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-admin">
        <div class="row">
            <!-- Admin Navigation -->
            <div class="col-lg-2 col-md-3 col-sm-12 admin-nav">
                <div class="nav-header">
                    <h1 class="text-gradient">HK SHOP</h1>
                </div>

                <div class="nav-menu" style="font-size: 16px;">
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                        <a asp-action="Index" asp-controller="Admin">
                            <i class="fa fa-dashboard"></i> Dashboard
                        </a>
                    </div>
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Products" ? "active" : "")">
                        <a asp-action="Products" asp-controller="Admin">
                            <i class="fa fa-cube"></i> Quản lý hàng hóa
                        </a>
                    </div>
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Orders" ? "active" : "")">
                        <a asp-action="Orders" asp-controller="Admin">
                            <i class="fa fa-shopping-cart"></i> Quản lý đơn hàng
                        </a>
                    </div>
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Clients" ? "active" : "")">
                        <a asp-action="Clients" asp-controller="Admin">
                            <i class="fa fa-users"></i> Quản lý người dùng
                        </a>
                    </div>
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Categories" ? "active" : "")">
                        <a asp-action="Categories" asp-controller="Admin">
                            <i class="fa fa-tags"></i> Quản lý loại
                        </a>
                    </div>
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Suppliers" ? "active" : "")">
                        <a asp-action="Suppliers" asp-controller="Admin">
                            <i class="fa fa-truck"></i> Quản lý nhà cung cấp
                        </a>
                    </div>
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Settings" ? "active" : "")">
                        <a asp-action="Settings" asp-controller="Admin">
                            <i class="fa fa-cog"></i> Settings
                        </a>
                    </div>
                </div>

                <div class="user-info">
                    <p>Hello, @User.Identity.Name</p>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-sm">
                        <i class="fa fa-sign-out"></i> Đăng xuất
                    </a>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-10 col-md-9 col-sm-12 admin-content">
                <div class="content-header">
                    <h2 class="text-uppercase">@ViewBag.Title</h2>
                    <div class="date-display d-none d-sm-flex flex-column align-items-end mr-3" style="font-size: 16px;">
                        <!-- Dòng mô tả -->
                        <small class="text-muted text-uppercase fw-light tracking-wide">Hôm nay là</small>

                        <!-- Phần hiển thị ngày tháng -->
                        <div class="flex-center">
                            <!-- Ngày tháng -->
                            <div class="date-text flex-center gap-2" style="color: #D10024;">
                                <div class="fw-bold fs-5">@DateTime.Now.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"))</div>
                                <div class="text-muted" style="color: #D10024;">@DateTime.Now.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>
                    </div>

                </div>

                @RenderBody()
                <span class="copyright bg-dark text-center">
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Copyright &copy; 2025 All rights reserved | Website được tạo bởi <a href="https://web.facebook.com/vankhanh.47.2004" target="_blank">Original NVK <i class="fa fa-heart-o" aria-hidden="true"></i></a>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </span>
            </div>
        </div>
    </div>

    <!-- jQuery Plugins -->
    <script src="~/js/jquery.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script> *@
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/nouislider.min.js"></script>
    <script src="~/js/jquery.zoom.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <!-- Bootstrap JS (Nếu dùng Bootstrap 5) -->
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@

    @RenderSection("Scripts", required: false)
</body>
</html>