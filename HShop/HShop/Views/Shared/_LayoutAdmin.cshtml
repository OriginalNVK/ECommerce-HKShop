<!DOCTYPE html>
<html>
<head>
    <!-- Các thẻ meta và link CSS giữ nguyên -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/img/logoweb.png">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <title>HK Shop - Admin</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/css/slick-theme.css" />
    <link type="text/css" rel="stylesheet" href="~/css/nouislider.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/css/style.css" />
    <link type="text/css" rel="stylesheet" href="~/css/admin_style.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=check_circle" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Admin Navigation - chiếm 2 cột trên desktop, 3 cột trên tablet -->
            <div class="col-lg-2 col-md-3 col-sm-12 admin-nav">
                <div class="nav-header">
                    <h3>HK SHOP</h3>
                </div>

                <div class="nav-menu">
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                        <a href="@Url.Action("Dashboard", "Admin")">
                            <i class="fa fa-dashboard"></i> Dashboard
                        </a>
                    </div>
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Products" ? "active" : "")">
                        <a href="@Url.Action("Products", "Admin")">
                            <i class="fa fa-cube"></i> Quản lý hàng hóa
                        </a>
                    </div>
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Orders" ? "active" : "")">
                        <a href="@Url.Action("Orders", "Admin")">
                            <i class="fa fa-shopping-cart"></i> Quản lý đơn hàng
                        </a>
                    </div>
                    <div class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Settings" ? "active" : "")">
                        <a href="@Url.Action("Settings", "Admin")">
                            <i class="fa fa-cog"></i> Settings
                        </a>
                    </div>
                </div>

                <div class="user-info">
                    <p>Hello, @User.Identity.Name</p>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-sm btn-outline-danger mt-2">
                        <i class="fa fa-sign-out"></i> Đăng xuất
                    </a>
                </div>
            </div>

            <!-- Main Content - chiếm 10 cột trên desktop, 9 cột trên tablet, 12 cột trên mobile -->
            <div class="col-lg-10 col-md-9 col-sm-12 admin-content">
                <div class="content-header">
                    <h2>@ViewBag.Title</h2>
                </div>

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>