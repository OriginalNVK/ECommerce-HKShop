<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="icon" type="image/png" href="~/img/logoweb.png">
	<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>HK Shop</title>

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

	<!-- Bootstrap -->
	<link href="~/css/bootstrap.min.css" rel="stylesheet">

	<!-- Slick -->
	<link type="text/css" rel="stylesheet" href="~/css/slick.css" />
	<link type="text/css" rel="stylesheet" href="~/css/slick-theme.css" />

	<!-- nouislider -->
	<link type="text/css" rel="stylesheet" href="~/css/nouislider.min.css" />

	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="~/css/font-awesome.min.css">

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="~/css/style.css" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=check_circle" />

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
	  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
	@RenderSection("Styles", required: false)
</head>
<body>
	<div>
		<!-- HEADER -->
		<header class="position-fixed fixed-top">
			<!-- TOP HEADER -->
			<div id="top-header">
				<div class="container">
					<ul class="header-links pull-left md-hidden d-md-none">
						<li><a href="#" class=""><i class="fa fa-phone"></i> +8485-898-1798</a></li>
						<li><a href="#"><i class="fa fa-envelope-o"></i> nvk.work@outlook.com</a></li>
						<li><a href="#"><i class="fa fa-map-marker"></i> KTX khu B. DHQG</a></li>
					</ul>
					<ul class="header-links pull-right">
						<li class="dropdown">
							@if (User.Identity.IsAuthenticated)
							{
								// Nếu đã đăng nhập, hiển thị "Hello @Hoten"
								<a href="#" class="dropdown-toggle" id="accountDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="fa fa-user-o"></i> Hello @User.Identity.Name <span class="caret"></span>
								</a>
								<ul class="dropdown-menu">
									<li><a class="dropdown-item" asp-action="DangXuat" asp-controller="KhachHang">Đăng xuất</a></li>
								</ul>
							}
							else
							{
								// Nếu chưa đăng nhập, hiển thị "Tài khoản" với các tùy chọn Đăng nhập/Đăng ký
								<a href="#" class="dropdown-toggle" id="accountDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="fa fa-user-o"></i> Tài khoản <span class="caret"></span>
								</a>
								<ul class="dropdown-menu">
									<li><a class="dropdown-item" asp-action="DangNhap" asp-controller="KhachHang">Đăng nhập</a></li>
									<li><a class="dropdown-item" asp-action="DangKy" asp-controller="KhachHang">Đăng ký</a></li>
								</ul>
							}
						</li>
					</ul>
				</div>
			</div>
			<!-- /TOP HEADER -->
			<!-- MAIN HEADER -->
			<div id="header">
				<!-- container -->
				<div class="container">
					<!-- row -->
					<div class="row d-md-flex">
						<!-- LOGO -->
						<div class="col-md-3">
							<div class="header-logo">
								<a href="/" class="logo">
									<h1 class="text-gradient">HK SHOP</h1>
								</a>
							</div>
						</div>
						<!-- /LOGO -->
						<!-- SEARCH BAR -->
						<div class="col-md-6 d-md-none">
							<div class="header-search">
								@await Component.InvokeAsync("MenuLoai")
							</div>
						</div>
						<!-- /SEARCH BAR -->
						<!-- ACCOUNT -->
						<div class="col-md-3 clearfix">
							<div class="header-ctn">
								<!-- Wishlist -->
								<div class="wishlist-icon">
									<a href="/blank">
										<i class="fa fa-heart-o"></i>
										<span class="text-label">Mục ưu thích</span>
										<div class="qty">2</div>
									</a>
								</div>
								<!-- /Wishlist -->
								@await Component.InvokeAsync("CartPanel")

								<!-- Menu Toogle -->
								<div class="menu-toggle">
									<a href="#">
										<i class="fa fa-bars"></i>
										<span class="text-label">Menu</span>
									</a>
								</div>
								<!-- /Menu Toogle -->
							</div>
						</div>
						<!-- /ACCOUNT -->
					</div>
					<!-- row -->
				</div>
				<!-- container -->
			</div>
			<!-- /MAIN HEADER -->
		</header>
		<!-- /HEADER -->
		<!-- NAVIGATION -->
		<nav id="navigation">
			<!-- container -->
			<div class="container">
				<!-- responsive-nav -->
						@await Component.InvokeAsync("Category")
				<!-- /responsive-nav -->
			</div>
			<!-- /container -->
		</nav>
		<!-- /NAVIGATION -->
		<div style="min-height: 400px;" class="hero-header">
			@RenderBody()
		</div>

		@await Html.PartialAsync("_Footer")
	</div>



	<!-- jQuery Plugins -->
	<script src="~/js/jquery.min.js"></script>
	@* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script> *@
	<script src="~/js/slick.min.js"></script>
	<script src="~/js/nouislider.min.js"></script>
	<script src="~/js/jquery.zoom.min.js"></script>
	<script src="~/js/main.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>	
	<!-- Bootstrap JS (Nếu dùng Bootstrap 5) -->
	@* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@

	@RenderSection("Scripts", required: false)

	<script>
		$(document).ready(function () {
			$("#searchButton").click(function () {
				let url = `/HangHoa/Search?query=` + $("#searchText").val();
				window.location.href = url;
			});
		});
	</script>
</body>
</html>
