@model HShop.ViewModels.RegisterVM
@{
	ViewData["Title"] = "Đăng ký";
}

<div class="container-fluid py-5">
	<div class="container py-5">
        <h1 class="mb-4 mt-4 text-center" style="color: #D10024;">Đăng ký Thành viên</h1>
        <form asp-action="DangKy" enctype="multipart/form-data" asp-controller="KhachHang">
            <div class="row">
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-90">
                        <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MaKh" class="form-control">
                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-90">
                        <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MatKhau" class="form-control">
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.HoTen"></label><sup>*</sup>
                        <input asp-for="@Model.HoTen" class="form-control">
                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Giới tính và Ngày sinh cùng hàng -->
            <div class="row align-items-center">
                <div class="col-md-6">
                    <label class="form-label my-3">Giới tính</label><sup>*</sup>
                    <div class="d-flex align-items-center gap-1">
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" asp-for="@Model.GioiTinh" value="true" id="Nam">
                            <label class="form-check-label" for="Nam">Nam</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="@Model.GioiTinh" value="false" id="Nu">
                            <label class="form-check-label" for="Nu">Nữ</label>
                        </div>
                    </div>
                    <span asp-validation-for="@Model.GioiTinh" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.NgaySinh"></label><sup>*</sup>
                        <input asp-for="@Model.NgaySinh" class="form-control" type="date">
                        <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.DiaChi"></label><sup>*</sup>
                        <input asp-for="@Model.DiaChi" class="form-control">
                        <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Điện thoại và Email cùng hàng -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.DienThoai"></label><sup>*</sup>
                        <input asp-for="@Model.DienThoai" class="form-control">
                        <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Email"></label><sup>*</sup>
                        <input asp-for="@Model.Email" class="form-control">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-item">
                        <label class="form-label my-3" for="Hinh">Hình</label><sup>*</sup>
                        <input type="file" name="hinh" class="form-control">
                    </div>
                </div>
            </div>

            <div class="row g-4 text-center align-items-center justify-content-center pt-4 mt-4">
                <button type="submit" class="btn border-primary border-hover-primary py-3 px-4 text-uppercase my-3 w-60">Đăng ký</button>
            </div>
        </form>
	</div>
</div>

