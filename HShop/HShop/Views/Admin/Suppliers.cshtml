@model IEnumerable<HShop.ViewModels.SupplierVM>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Quản lý nhà cung cấp";
}
<div class="card">
    <div class="card-header">
        <h4 class="mb-0 text-center" style="font-size: 20px">Danh sách nhà cung cấp</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="hoaDonTable">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center">Mã NCC</th>
                        <th class="text-center">Tên công ty</th>
                        <th class="text-center">Logo</th>
                        <th class="text-center">Người liên lạc</th>
                        <th class="text-center">Email người liên lạc</th>
                        <th class="text-center">Điện thoại</th>
                        <th class="text-center">Địa chỉ</th>
                        <th class="text-center">Mô tả</th> 
                        <th class="text-center">Thao tác</th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.MaNcc</td>
                            <td class="text-center">@item.TenCongTy</td>
                            <td class="text-center"><img src="~/Hinh/NhaCC/@item.Logo" alt="@item.TenCongTy" width="120" height="110"></td>
                            <td class="text-center">@item.NguoiLienLac</td>
                            <td class="text-center">@item.Email</td>
                            <td class="text-center">@item.DienThoai</td>
                            <td class="text-center">@item.DiaChi</td>
                            <td class="text-center">@item.MoTa</td>
                            <td class="text-center">
                                <div class="btn-group d-flex justify-center gap-2" role="group">
                                    <a asp-action="Delete" asp-controller="Suppliers" asp-route-id="@item.MaNcc"
                                       class="btn btn-sm btn-delete" title="Xóa loai">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-delete').click(function (e) {
                e.preventDefault(); // Ngăn chặn hành vi mặc định
                var deleteUrl = $(this).attr('href'); // Lấy URL từ thẻ a

                // Hiển thị hộp thoại confirm
                if (confirm('Bạn có chắc chắn muốn xóa nhà cung cấp này?')) {
                    window.location.href = deleteUrl; // Chuyển hướng nếu đồng ý
                }
            });
        });
    </script>
}