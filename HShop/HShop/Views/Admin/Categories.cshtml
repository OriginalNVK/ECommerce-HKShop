@model IEnumerable<HShop.ViewModels.CategoryVM>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Quản lý loại hàng hóa";
}
<div class="card">
    <div class="card-header">
        <h4 class="mb-0 text-center" style="font-size: 20px">Danh sách loại hàng hóa</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="hoaDonTable">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center">Mã loại</th>
                        <th class="text-center">Ảnh minh họa</th>
                        <th class="text-center">Tên loại</th>
                        <th class="text-center">Tên alias</th>
                        <th class="text-center">Mô tả</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.MaLoai</td>
                            <td class="text-center"><img src="~/Hinh/Loai/@item.Hinh" alt="@item.TenLoai" width="120" height="110"></td>
                            <td class="text-center">@item.TenLoai</td>
                            <td class="text-center">@item.TenLoaiAlias</td>
                            <td class="text-center">@item.MoTa</td>
                            <td class="text-center">
                                <div class="btn-group d-flex justify-center gap-2" role="group">
                                    <a asp-action="Update" asp-controller="Categories" asp-route-id="@item.MaLoai"
                                       class="btn btn-sm btn-info" title="Chỉnh sửa">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="Categories" asp-route-id="@item.MaLoai"
                                       class="btn btn-sm btn-delete" title="Xóa loai">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-delete').click(function (e) {
                e.preventDefault(); // Ngăn chặn hành vi mặc định
                var deleteUrl = $(this).attr('href'); // Lấy URL từ thẻ a

                // Hiển thị hộp thoại confirm
                if (confirm('Bạn có chắc chắn muốn xóa loại hàng hóa này?')) {
                    window.location.href = deleteUrl; // Chuyển hướng nếu đồng ý
                }
            });
        });
    </script>
}