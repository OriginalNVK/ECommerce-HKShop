        $(document).ready(function () {
            $('#hoaDonTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json"
                }
            });

            // Xử lý click nút xem chi tiết - chuyển hướng trực tiếp
