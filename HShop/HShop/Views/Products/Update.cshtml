@model HShop.ViewModels.ProductAdminVM
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	ViewBag.Title = "Cập nhật hàng hóa";
}

<div class="container-fluid">
	<div class="card shadow mb-4">
		<div class="card-header py-3 pb-4">
			<h2 class="m-0 font-weight-bold text-center">Cập nhật hàng hóa @Model.TenHh</h2>
		</div>
		<div class="card-body mt-4">
			<form asp-action="Edit" class="form-horizontal">
				<input type="hidden" name="id" value="@ViewContext.RouteData.Values["id"]" />
				<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
				<input type="hidden" asp-for="MaHh" />
				<!-- Cột thông tin chính -->
				<div class="d-flex">
					<div class="col-md-5">
						<div class="form-group">
							<label class="col-sm-4 col-form-label">Tên hàng hóa</label>
							<div class="col-sm-8">
								<input asp-for="TenHh" class="form-control" />
								<span asp-validation-for="TenHh" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Tên Alias</label>
							<div class="col-sm-8">
								<input asp-for="TenAlias" class="form-control" />
								<span asp-validation-for="TenAlias" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Mã loại</label>
							<div class="col-sm-8">
								<select asp-for="MaLoai" class="form-control" asp-items="ViewBag.MaLoai">
									<option value="">-- Chọn loại hàng --</option>
								</select>
								<span asp-validation-for="MaLoai" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Mô tả đơn vị</label>
							<div class="col-sm-8">
								<input asp-for="MoTaDonVi" class="form-control" />
								<span asp-validation-for="MoTaDonVi" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Đơn giá</label>
							<div class="col-sm-8">
								<div class="input-group flex-center">
									<input asp-for="DonGia" class="form-control" type="number" step="0.01" />
									<div class="input-group-append">
										<span class="input-group-text">$</span>
									</div>
								</div>
								<span asp-validation-for="DonGia" class="text-danger small"></span>
							</div>
						</div>
					</div>

					<!-- Cột thông tin phụ -->
					<div class="col-md-5">
						<div class="form-group">
							<label class="col-sm-4 col-form-label">Ngày sản xuất</label>
							<div class="col-sm-8">
								<input asp-for="NgaySx" class="form-control" type="date" />
								<span asp-validation-for="NgaySx" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Giảm giá</label>
							<div class="col-sm-8">
								<div class="input-group flex-center">
									<input asp-for="GiamGia" class="form-control" type="number" step="0.01" min="0" max="1" />
									<div class="input-group-append">
										<span class="input-group-text">%</span>
									</div>
								</div>
								<span asp-validation-for="GiamGia" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Số lần xem</label>
							<div class="col-sm-8">
								<input asp-for="SoLanXem" class="form-control" type="number" />
								<span asp-validation-for="SoLanXem" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Mã nhà cung cấp</label>
							<div class="col-sm-8">
								<select asp-for="MaNcc" class="form-control" asp-items="ViewBag.MaNcc">
									<option value="">-- Chọn nhà cung cấp --</option>
								</select>
								<span asp-validation-for="MaNcc" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">

							@if (!string.IsNullOrEmpty(Model.Hinh))
							{
								<label class="col-sm-4 col-form-label">Ảnh minh họa</label>
								<div class="col-sm-8">
									<div class="custom-file d-flex">
										<span class="mr-2">@Model.Hinh</span>
										<input asp-for="Hinh" class="custom-file-input" id="customFile" type="file">
									</div>
									<span asp-validation-for="Hinh" class="text-danger small"></span>
									<div class="mt-2">
										<img src="~/Hinh/HangHoa/@Model.Hinh" alt="Ảnh hiện tại" class="img-thumbnail" style="max-height: 150px;">
									</div>
								</div>
							}
							else
							{
								<label class="col-sm-4 col-form-label">Ảnh minh họa</label>
								<div class="col-sm-8">
									<div class="custom-file">
										<input asp-for="Hinh" class="custom-file-input" id="customFile" type="file">
									</div>
									<span asp-validation-for="Hinh" class="text-danger small"></span>
									<div class="mt-2">
										<div style="width: 150px; height: 150px; border: 1px solid #ddd; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa;" class="img-thumbnail">
											<span style="color: #666; font-size: 14px;">150px x 150px</span>
										</div>
									</div>
								</div>
							}
						</div>
					</div>
				</div>

				<!-- Mô tả sản phẩm -->
				<div class="form-group">
					<label class="control-label">Mô tả</label>
					<textarea asp-for="MoTa" class="form-control" rows="5"></textarea>
					<span asp-validation-for="MoTa" class="text-danger small"></span>
				</div>

				<!-- Nút hành động -->
				<div class="form-group text-center mt-4">
					<button type="submit" class="btn btn-primary px-4">
						Lưu thay đổi
					</button>
					<a asp-action="Products" asp-controller="Admin" class="btn btn-secondary ml-2">
						Quay lại danh sách
					</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}