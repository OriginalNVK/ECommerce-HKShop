@model HShop.ViewModels.ProductAdminVM
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	ViewBag.Title = "Chi tiết đơn hàng";
}
<!-- SECTION -->
<div class="section">
	<div class="container">
		<!-- Product main img -->
		<div class="col-md-5 col-md-push-2">
			<div id="product-main-img">
				<div class="product-preview">
					<img src="~/Hinh/HangHoa/@Model.Hinh" class="img-fluid" alt="@Model.TenHh">
				</div>
			</div>
		</div>
		<!-- /Product main img -->
		<!-- Product thumb imgs -->
		<div class="col-md-2 col-md-pull-5">
			<div id="product-imgs">
				<div class="product-preview">
					<img src="~/Hinh/HangHoa/@Model.Hinh" alt="@Model.TenHh">
				</div>
				<!-- Có thể thêm ảnh phụ nếu có -->
			</div>
		</div>
		<!-- /Product thumb imgs -->
		<!-- Product details -->
		<div class="col-md-5">
			<div class="product-details">
				<h2 class="product-name">@Model.TenHh</h2>

				<!-- Rating -->
				<div>
					<div class="product-rating">
						<i class="fa fa-star text-secondary"></i>
						<i class="fa fa-star text-secondary"></i>
						<i class="fa fa-star text-secondary"></i>
						<i class="fa fa-star text-secondary"></i>
						<i class="fa fa-star"></i>
					</div>
					<a class="review-link" href="#">2 Review(s) | Thêm đánh giá</a>
				</div>

				<!-- Price & Stock -->
				<div>
					<h3 class="product-price">@Model.DonGia?.ToString("N0") đ</h3>
					@if (Model.GiamGia > 0)
					{
						<span class="product-old-price">@((Model.DonGia / (1 - Model.GiamGia)))?.ToString("N0") đ</span>
						<span class="product-discount">-@Model.GiamGia.ToString("P0")</span>
					}
					<span class="product-available">Còn hàng</span>
				</div>

				<p>@Model.MoTaDonVi</p>

				<!-- Thông tin bổ sung từ phiên bản đầu -->
				<div class="product-meta">
					<p><strong>Mã sản phẩm:</strong> @Model.MaHh</p>
					<p><strong>Nhà cung cấp:</strong> @Model.MaNccNavigation?.TenCongTy</p>
					<p><strong>Loại hàng hóa:</strong> @Model.MaLoaiNavigation?.TenLoai</p>
					<p><strong>Ngày sản xuất:</strong> @Model.NgaySx.ToString("dd/MM/yyyy")</p>
					<p><strong>Lượt xem:</strong> @Model.SoLanXem</p>
					<p><strong>Mô tả đơn vị:</strong> @Model.MoTaDonVi</p>
				</div>

				<!-- Share -->
				<ul class="product-links">
					<li>Chia sẻ:</li>
					<li><a href="#"><i class="fa fa-facebook"></i></a></li>
					<li><a href="#"><i class="fa fa-twitter"></i></a></li>
					<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
					<li><a href="#"><i class="fa fa-envelope"></i></a></li>
				</ul>
			</div>
		</div>
		<!-- /Product details -->
		<!-- Product tab -->
		<div class="col-md-12">
			<div id="product-tab">
				<!-- product tab nav -->
				<ul class="tab-nav">
					<li class="active"><a data-toggle="tab" href="#tab1">Mô tả chi tiết</a></li>
					<li><a data-toggle="tab" href="#tab2">Thông số kỹ thuật</a></li>
					<li><a data-toggle="tab" href="#tab3">Đánh giá (2)</a></li>
				</ul>
				<!-- /product tab nav -->
				<!-- product tab content -->
				<div class="tab-content">
					<!-- tab1: Description -->
					<div id="tab1" class="tab-pane fade in active">
						<div class="col-md-12">
							@Html.Raw(Model.MoTa ?? "Không có mô tả chi tiết")
						</div>
					</div>

					<!-- tab2: Specifications -->
					<div id="tab2" class="tab-pane fade">
						<div class="d-flex">
							<div class="col-md-6">
								<h4>Thông tin chung</h4>
								<table class="table">
									<tr>
										<td>Mã sản phẩm</td>
										<td>@Model.MaHh</td>
									</tr>
									<tr>
										<td>Tên alias</td>
										<td>@Model.TenAlias</td>
									</tr>
									<tr>
										<td>Loại sản phẩm</td>
										<td>@Model.MaLoaiNavigation?.TenLoai</td>
									</tr>
								</table>
							</div>
							<div class="col-md-6">
								<h4>Thông tin bổ sung</h4>
								<table class="table">
									<tr>
										<td>Nhà cung cấp</td>
										<td>@Model.MaNccNavigation?.TenCongTy</td>
									</tr>
									<tr>
										<td>Mã NCC</td>
										<td>@Model.MaNcc</td>
									</tr>
									<tr>
										<td>Ngày sản xuất</td>
										<td>@Model.NgaySx.ToString("dd/MM/yyyy")</td>
									</tr>
								</table>
							</div>
						</div>
					</div>

					<!-- tab3: Reviews -->
					<div id="tab3" class="tab-pane fade">
						<div class="col-md-10">
							<div class="product-reviews">
								<!-- Review content here -->
							</div>
						</div>
					</div>
				</div>
				<!-- /product tab content -->
			</div>
		</div>
		<!-- /Product tab -->
	</div>
</div>
<!-- /SECTION -->