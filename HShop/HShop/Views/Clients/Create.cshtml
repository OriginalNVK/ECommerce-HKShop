@model HShop.Data.KhachHang
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	ViewBag.Title = "Thêm người dùng mới";
}

<div class="container-fluid">
	<div class="card shadow mb-4">
		<div class="card-header py-3 pb-4">
			<h2 class="m-0 font-weight-bold text-center">Thông tin người dùng</h2>
		</div>
		<div class="card-body mt-4">
			<form asp-action="Create" asp-controller="Clients" class="form-horizontal" method="post" enctype="multipart/form-data">
				@* <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div> *@
				<!-- Cột thông tin chính -->
				<div class="d-flex">
					<div class="col-md-5">
						<div class="form-group">
							<label class="col-sm-4 col-form-label">Username: </label>
							<div class="col-sm-8">
								<input asp-for="MaKh" class="form-control" />
								<span asp-validation-for="MaKh" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Họ và tên</label>
							<div class="col-sm-8">
								<input asp-for="HoTen" class="form-control" />
								<span asp-validation-for="HoTen" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Giới tính: </label>
							<div class="col-sm-8">
								<div class="form-check form-check-inline">
									<input class="form-check-input" type="radio" asp-for="GioiTinh" value="true" id="gioiTinhNam">
									<label class="form-check-label" for="gioiTinhNam">Nam</label>
								</div>
								<div class="form-check form-check-inline">
									<input class="form-check-input" type="radio" asp-for="GioiTinh" value="false" id="gioiTinhNu">
									<label class="form-check-label" for="gioiTinhNu">Nữ</label>
								</div>
								<span asp-validation-for="GioiTinh" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Số điện thoại: </label>
							<div class="col-sm-8">
								<input asp-for="DienThoai" class="form-control" />
								<span asp-validation-for="DienThoai" class="text-danger small"></span>
							</div>
						</div>
					</div>

					<div class="col-md-5">
						<div class="form-group">
							<label class="col-sm-4 col-form-label">Mật khẩu: </label>
							<div class="col-sm-8">
								<input asp-for="MatKhau" class="form-control" type="date" />
								<span asp-validation-for="MatKhau" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Địa chỉ: </label>
							<div class="col-sm-8">
									<input asp-for="DiaChi" class="form-control" type="text" placeholder="KTX khu B, DHQG" />
								<span asp-validation-for="DiaChi" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Email: </label>
							<div class="col-sm-8">
								<input asp-for="Email" class="form-control" type="number" />
								<span asp-validation-for="Email" class="text-danger small"></span>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-4 col-form-label">Ảnh minh họa</label>
							<div class="col-sm-8">
								<div class="custom-file">
									<input asp-for="Hinh" class="custom-file-input" id="customFile" type="file">
								</div>
								<span asp-validation-for="Hinh" class="text-danger small"></span>
								<div class="mt-2">
									<div style="width: 150px; height: 150px; border: 1px solid #ddd; display: flex; align-items: center; justify-content: center; background-color: #f8f9fa;" class="img-thumbnail">
										<span style="color: #666; font-size: 14px;">150px x 150px</span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Nút hành động -->
				<div class="form-group text-center mt-4">
					<button type="submit" class="btn btn-success justify-content-center text-center px-4">
						Thêm người dùng
					</button>
					<a asp-action="Clients" asp-controller="Admin" class="btn btn-filter ml-2" style="height: 40px">
						Quay lại danh sách
					</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}